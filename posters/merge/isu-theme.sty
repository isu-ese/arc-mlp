% -- COLORS --

\definecolor{Roarange}{HTML}{F47920} % Primary
\definecolor{BengalBlack}{HTML}{000000} % Pantone 286
\definecolor{GrowlingGray}{HTML}{828282}

% secondary palette
\definecolor{RoarangeLight}{HTML}{f69240}
\definecolor{GrowlingGrayMedium}{HTML}{A7A7A7}
\definecolor{GrowlingGrayLight}{HTML}{E6E7E8}
\definecolor{White}{HTML}{FFFFFF}

% tikzposter color palette
\definecolorpalette{ISUPalette} {
    \definecolor{colorOne}{named}{Roarange}
    \definecolor{colorTwo}{named}{BengalBlack}
    \definecolor{colorThree}{named}{GrowlingGray}
}

% tikzposter style
\definecolorstyle{ISUStyle} {
    \usecolorpalette{ISUPalette}
}{
    % background
    \colorlet{backgroundcolor}{White}
    \colorlet{framecolor}{White}
    % title colors
    \colorlet{titlefgcolor}{BengalBlack}
    \colorlet{titlebgcolor}{White}
    % block colors
    \colorlet{blocktitlebgcolor}{colorOne}
    \colorlet{blocktitlefgcolor}{White}
    \colorlet{blockbodybgcolor}{White}
    \colorlet{blockbodyfgcolor}{BengalBlack}
    % innerblock colors
    \colorlet{innerblocktitlebgcolor}{White}
    \colorlet{innerblocktitlefgcolor}{GrowlingGray}
    \colorlet{innerblockbodybgcolor}{White}
    \colorlet{innerblockbodyfgcolor}{BengalBlack}
    % note colors
    \colorlet{notefgcolor}{BengalBlack}
    \colorlet{notebgcolor}{colorTwo}
    \colorlet{noteframecolor}{colorTwo}
}

% -- STYLE --

% background
\definebackgroundstyle{ISUBackgroundStyle}{
    \draw[line width=0pt, color=framecolor, fill=backgroundcolor]
    (bottomleft) rectangle (topright);
}

% title
\definetitlestyle{ISUTitleStyle}{
    width=\textwidth, linewidth=5pt, titletotopverticalspace=0in
}{
    \begin{scope}[line width=\titlelinewidth,]
    \draw[color=colorThree!30!white,round cap-round cap]
    (\titleposleft,\titleposbottom)--(\titleposright,\titleposbottom);
    \end{scope}
}

% block
\defineblockstyle{ISUBlockStyle}{
    titlewidthscale=0.9, bodywidthscale=1, roundedcorners=5
}{
    \draw[color=framecolor, fill=blockbodybgcolor,
    rounded corners=\blockroundedcorners] (blockbody.south west)
    rectangle (blockbody.north east);
    \ifBlockHasTitle
    \draw[color=framecolor, fill=blocktitlebgcolor,
    rounded corners=\blockroundedcorners] (blocktitle.south west)
    rectangle (blocktitle.north east);
    \fi
}

% -- THEME -- 
\definelayouttheme{ISUTheme}{
    \usecolorstyle[colorPalette=ISUPalette]{ISUStyle}
    \usebackgroundstyle{ISUBackgroundStyle}
    \usetitlestyle{ISUTitleStyle}
    \useblockstyle{ISUBlockStyle}
    \useinnerblockstyle{Default}
    \usenotestyle{Default}
}

% -- TITLE FORMAT --
\makeatletter
\def\title#1{\gdef\@title{\scalebox{\TP@titletextscale}{%
\begin{minipage}[t]{\linewidth}
\centering
#1
\par
\end{minipage}%
}}}
\makeatother

% place logo to right of centered title
\makeatletter
\renewcommand\TP@maketitle{%
   \centering
   \tikz[remember picture, overlay]\node[anchor=south west, xshift=-0.5\linewidth,inner sep=0pt] {%
        \includegraphics[width=.2\textwidth]{wide.png}
   };
   \begin{minipage}[b]{0.8\linewidth}
        \centering
        \color{titlefgcolor}
        {\bfseries \Huge \@title \par}
        \vspace*{1em}
        {\huge \@author \par}
        \vspace*{1em}
        {\LARGE \@institute}
    \end{minipage}%
    \tikz[remember picture,overlay]\node[anchor=south east,xshift=0.5\linewidth,inner sep=0pt] {%
        \includegraphics[width=.1\textwidth]{trio_logos-mcnair_red.eps}
    };
}
\makeatother